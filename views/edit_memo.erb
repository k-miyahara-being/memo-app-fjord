<h2>編集</h2>
<form action="/memos/<%= @id %>" method="POST" name="frm_patch">
  <div>
    <label>
      タイトル
      <input type="text" name="title" value="<%= h @memo["title"] %>">
    </label>
  </div>
  <div>
    <label>
      内容
      <textarea name="content"><%= @memo["content"] %></textarea>
    </label>
  </div>
  <input type="hidden" name="_method" value="PATCH">
  <input type="submit" value="変更">
</form>